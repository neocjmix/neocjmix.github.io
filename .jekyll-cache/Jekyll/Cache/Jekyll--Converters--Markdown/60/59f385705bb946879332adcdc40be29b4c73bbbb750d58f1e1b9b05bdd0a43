          <span class="nt">&lt;li&gt;&lt;a</span> <span class="na">href=</span><span class="s">"{{ BASE_PATH }}{{ site.JB.categories_path }}#{{ category }}-ref"</span><span class="nt">&gt;</span>{{ category }}<span class="nt">&lt;/a&gt;&lt;/li&gt;</span>
          {% endfor %}
        <span class="nt">&lt;/ul&gt;</span>
        <span class="nt">&lt;h1&gt;&lt;a</span> <span class="na">href=</span><span class="s">"{{ BASE_PATH }}{{ post.url }}"</span><span class="nt">&gt;</span>{{ post.title }}<span class="nt">&lt;/a&gt;&lt;/h1&gt;</span>
        <span class="nt">&lt;span</span> <span class="na">class=</span><span class="s">"date"</span><span class="nt">&gt;</span>{{ post.date | date_to_string }}<span class="nt">&lt;/span&gt;</span>
      <span class="nt">&lt;/header&gt;</span>
      <span class="nt">&lt;section</span> <span class="na">class=</span><span class="s">"excerpt"</span><span class="nt">&gt;</span>
        {{ post.excerpt }}
      <span class="nt">&lt;/section&gt;</span>
      <span class="nt">&lt;section</span> <span class="na">class=</span><span class="s">"tags"</span><span class="nt">&gt;</span>
        <span class="nt">&lt;h2&gt;</span>tags<span class="nt">&lt;/h2&gt;</span>
        <span class="nt">&lt;ul&gt;</span>
          {% for tag in post.tags %}
            <span class="nt">&lt;li&gt;&lt;a</span> <span class="na">href=</span><span class="s">"{{ BASE_PATH }}{{ site.JB.tags_path }}#{{ tag }}-ref"</span><span class="nt">&gt;</span>{{ tag }}<span class="nt">&lt;/a&gt;&lt;/li&gt;</span>
          {% endfor %}
        <span class="nt">&lt;/ul&gt;</span>
      <span class="nt">&lt;/section&gt;</span>
    <span class="nt">&lt;/article&gt;</span>
{% endfor %}
